<div class="fraseform">
<%= simple_form_for @frase, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :autor, :placeholder => 'Â¿Quien lo dijo?' %><br>
  <%= f.input :descripcion, :label => 'Frase', :as => :text, :input_html => { :rows => 7, :class => 'resizable' }, :placeholder => 'Describe lo que quieres Expresar' %>
  <% if logged_in? && (current_user.tipo.eql? "Administrador") %>
  	<%= f.input :likes, :label => 'Me Gusta' %>
  	<%= f.input :user_likes, :label => 'Usuarios de Me gusta' %>
  <% end %>
  <br>
  <%= f.button :submit, :label => 'Listo' , :class => 'btn btn-primary', :id => "button"%>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                frases_path, :class => 'btn btn-danger', :id => "button" %>  
<% end %>
</div>