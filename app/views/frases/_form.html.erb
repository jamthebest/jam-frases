<%= simple_form_for @frase, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :autor %><br>
  <%= f.input :descripcion, :label => 'Frase', :as => :text, :input_html => { :rows => 7, :class => 'resizable' } %>
  <br>
  <%= f.button :submit, :label => 'Listo' , :class => 'btn btn-primary'%>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                frases_path, :class => 'btn btn-danger' %>  
<% end %>
