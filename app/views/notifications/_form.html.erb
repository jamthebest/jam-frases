<%= simple_form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :contenido %>
  <%= f.input :de %>
  <%= f.input :para %>
  <%= f.input :leido %>
  <%= f.input :tipo %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' :id => "button" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notifications_path, :class => 'btn' :id => "button" %>
  </div>
<% end %>
