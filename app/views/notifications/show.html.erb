<%- model_class = @notification.class -%>
<div class="page-header">
  <h1>Notificación</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:de) %>:</strong></dt>
  <dd><%= link_to User.find(@notification.de).username, user_path(@notification.de) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @notification.tipo==1 ? "Reporte" : (@notification.tipo==2 ? "Notificación" : "Nada" ) %></dd>
  <dt><strong>Contenido:</strong></dt>
  <dd><%= @notification.contenido %></dd>
  
</dl>

<div class="form-actions">
  <a class="btn btn-inverse" href=<%=notifications_path%>><i class="icon-arrow-left icon-white"></i> Atrás </a>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              notification_path(@notification),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
