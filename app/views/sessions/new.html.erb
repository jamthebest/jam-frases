<div class="session">
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions" id="button"><%= submit_tag "Autenticar", :id=>"button" %></div>
<% end %>
</div>